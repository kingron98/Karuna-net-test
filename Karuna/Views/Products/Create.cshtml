@model Karuna.Models.ProductViewModels

@{
    ViewBag.Title = "Add New Product";
    Layout = "";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-sm-4 control-label">Product Name <span class="required" style="color:red">&#42;</span><span class="fa fa-question-circle" data-toggle="tooltip" title="Enter product name."></span></label>

        <div class="col-sm-8">
            @Html.TextBoxFor(model => model.ProductInformation.Productname, new { @id = "createproductname", @class = "form-control", @maxlength = "80" })<br />
            @Html.ValidationMessageFor(model => model.ProductInformation.Productname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-4 control-label">Price <span class="required" style="color:red">&#42;</span><span class="fa fa-question-circle" data-toggle="tooltip" title="Enter product price."></span></label>

        <div class="col-sm-8">
            @Html.TextBoxFor(model => model.ProductInformation.Price, new { @id = "createprice", @class = "form-control", @maxlength = "80" })
            @Html.ValidationMessageFor(model => model.ProductInformation.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-4 control-label">Details <span class="required" style="color:red">&#42;</span><span class="fa fa-question-circle" data-toggle="tooltip" title="Enter product details."></span></label>

        <div class="col-sm-8">
            @Html.TextBoxFor(model => model.ProductInformation.Details, new { @id = "createdetails", @class = "form-control", @maxlength = "80" })
            @Html.ValidationMessageFor(model => model.ProductInformation.Details, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-4 control-label">Publish <span class="required" style="color:red">&#42;</span><span class="fa fa-question-circle" data-toggle="tooltip" title="Choose to publish product."></span></label>

        <div class="col-sm-8">
            <div class="checkbox">
                @Html.EditorFor(model => model.ProductInformation.Publish, new { @id = "createpublish" })
                @Html.ValidationMessageFor(model => model.ProductInformation.Publish, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="createSubmit" class="btn btn-default submitBtn" />
            </div>
        </div>*@
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
